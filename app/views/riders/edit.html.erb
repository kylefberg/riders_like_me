<h1>About Me</h1>
<%= form_for @rider do |f| %>
  <% if @rider.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @rider.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :sex %>
      <select my_experiance="select">
      <option value="Male">Male</option>
      <option value="Female">Female</option>
      <option value="Undecided">Undecided</option>
      </select>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :my_experience %>
    <%= f.select(:my_experience, [['Beginner', 'Beginner'], ['Intermediate', 'Intermediate'], ['Advanced', 'Advanced']]) %>

  </div>
  <h5><strong>My Interests:</strong></h5>
  <div class="field">
    <%= f.check_box(:street) %>
    <%= label_tag(:street, "Street") %>
  </div>
  <div class="field">
    <%= f.check_box(:adventure) %>
    <%= label_tag(:adventure, "Adventure") %>
  </div>
  <div class="field">
    <%= f.check_box(:duel_sport) %>
    <%= label_tag(:duel_sport, "Duel Sport") %>
  </div>
  <div class="field">
    <%= f.check_box(:dirt) %>
    <%= label_tag(:dirt, "Dirt") %>
  </div>
  <div class="field">
    <%= f.label :my_bike %>
    <%= f.text_field :my_bike %>
  </div>
  <div class="field">
    <%= f.label :my_photo %>
    <%= f.text_field :my_photo %>
  </div>
  <div class="field">
    <%= f.label :my_bio %>
    <%= f.text_field :my_bio %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>
