<h1>Riders Like Me</h1>
<div class="jumbotron">
  <h4><%= @notice %></h4>
  <div class="container">
    <img class="center-block" src="/triumph.jpg" alt="Adventure Riding">
  </div>
</div>
<h2>
  Connecting riders to meet and ride with,
  based on interest.
</h2>

<div class="container">
  <div class="row">
    <% @riders.each do |rider| %>
      <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <% if rider != current_rider %>
            <a href="/details/<%= rider.id %>" >
              <div class="thumbnail" id="profiles">
                <%= image_tag rider.profile_photo.url(:square) %>
                  <div class="caption">
                    <h3><%= rider.name %></h3>
                  </div>
              </div>
            </a>
        <% end %>
      </div>
    <% end %>
  </div>
</div>




