<h1>Riders Like Me</h1>
<div class="jumbotron">
  <h4><%= @notice %></h4>
  <div class="container">
    <img class="center-block" src="https://s-media-cache-ak0.pinimg.com/236x/42/1a/97/421a9706bd6bb340225656a9619ee207.jpg" alt="Adventure Riding">
  </div>
</div>
<h2>
  Connecting riders to meet and ride with,
  based on interest.
</h2>

<div class="container">

  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
    <% @riders.each do |rider| %>
      <% if rider != current_rider %>
          <a href="/details/<%= rider.id %>" >
            <div class="thumbnail" id="profiles">
              <%= image_tag rider.profile_photo.url(:square) %>
                <div class="caption">
                  <h3><%= rider.name %></h3>
                </div>
            </div>
          </a>
      <% end %>
    <% end %>
  </div>
</div>





